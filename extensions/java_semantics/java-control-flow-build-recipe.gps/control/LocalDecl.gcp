package control;

recipe LocalDecl(node root, node exit, out node entry) {
	try {
		// Try to match a local declaration without an expression.
		entry := rule.LocalDecl-NoExpr(root, exit);
	} else {
		// Try to match a local declaration with an expression.
		node eroot := rule.LocalDecl-WithExpr(root, exit);
		entry := Expr(eroot, root);
	}
}
