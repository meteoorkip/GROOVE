package control;

recipe FieldDecl(node root, node exit, out node entry) {
	try {
		// Try to match a field declaration without an expression.
		entry := rule.FieldDecl-NoExpr(root, exit);
	} else try {
		// Try to match a field declaration with an expression.
		node eroot := rule.FieldDecl-WithExpr(root, exit);
		entry := Expr(eroot, root);
	} else {
		// The only possibility left is an initialization.
		entry := Initializer(root, exit);
	}
}
